<!doctype html>
<html lang="en">

<head>
  <title>Title</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/profile.css">
</head>

<body>
{{>navbar}}
<img src="/static/css/yellow-cars-city-taxi_566596-23 (1).jpeg" alt="" class="cabimg">
<div class=".container mb-5 mx-5 row cabbody" style="margin-top: 100px;">
    <div class="col-4  profileside">
        <div class="display-4">Profile</div>
        <table class="table table-default">
          <tr>
            <td>Name :</td>
            <td>{{info.f_name}}{{info.l_name}}</td>
          </tr>
          <tr>
            <td>User Name :</td>
            <td>{{info.user_name}}</td>
          </tr>
          <tr>
            <td>Email :</td>
            <td>{{info.email}}</td>
          </tr>
          <tr>
            <td>Mobile :</td>
            <td>{{info.mobile}}</td>
          </tr>
        </table>
    <a href="/profile/update" class="btn btn-primary">Update</a>
    <a href="/profile/delete" class="btn btn-primary">Delete</a>
    <a href="/profile/allBookings?page=1"class="btn btn-primary">View All your Bookings</a>
  </div>
    <div class="adminside col-4">
    <br>
    {{#if info.admin}}
    <br><p class="display-6">ADMIN CONTROLS</p>
    <a href="/admin/viewAllUsers"class="btn btn-primary">View All Users</a>
    <a href="/admin/viewAllDrivers"class="btn btn-primary">View All Drivers</a>
    <a href="/admin/selectCab?page=1"class="btn btn-primary">View All Cabs</a>
    <a href="/admin/allBookings?page=1"class="btn btn-primary">View All Bookings</a>
    {{/if}}
    </div>
</div>
{{>footer}}
  <!-- Bootstrap JavaScript Libraries -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
  </script>
</body>

</html>